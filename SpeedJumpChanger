local RunService = game:GetService("RunService")
local player = game.Players.LocalPlayer

-- Уникальные имена для глобальных переменных
_G.MyUniqueSpeedEnabled = false
_G.MyUniqueSpeed = 16

local function applyCustomAttributes(humanoid)
    if _G.MyUniqueSpeedEnabled then
        humanoid.WalkSpeed = _G.MyUniqueSpeed
    end
end

local function onCharacterAdded(character)
    local humanoid = character:WaitForChild("Humanoid")

    local connection
    connection = RunService.RenderStepped:Connect(function()
        if _G.MyUniqueSpeedEnabled then
            applyCustomAttributes(humanoid)
        elseif connection then
            connection:Disconnect()
            connection = nil
        end
    end)
end

player.CharacterAdded:Connect(onCharacterAdded)

if player.Character then
    onCharacterAdded(player.Character)
end
